{
  "info": {
    "name": "SafeBank - FUNCIONA 100% (FINAL)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Registrar usuário",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao{{ $randomInt }}@teste.com\",\n  \"password\": \"123456\",\n  \"age\": 30\n}"
        },
        "url": "http://localhost:8080/auth/register"
      }
    },
    {
      "name": "2. Login (salva token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": "if (pm.response.code === 200) {\n    pm.environment.set(\"jwt\", pm.response.text().trim());\n    console.log(\"Token salvo:\", pm.response.text().trim().substring(0,50)+\"...\");\n}",
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"joao123@teste.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": "http://localhost:8080/auth/login"
      }
    },
    {
      "name": "3. Criar relato",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Golpe do WhatsApp clonado\",\n  \"description\": \"Clonaram meu WhatsApp e pediram Pix pros meus contatos. Já fiz BO e avisei o banco.\"\n}"
        },
        "url": "http://localhost:8080/reports"
      }
    },
    {
      "name": "4. Listar relatos",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/reports"
      }
    }
  ]
}